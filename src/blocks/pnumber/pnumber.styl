.pnumber {
  margin: -15px; display: flex; flex-wrap: wrap;

  &__item { width: 50%; padding: 30px 20px 25px; }
  &__number { color: #d64356; margin-bottom: 10px; font-size: 48px; line-height: 0.8; font-weight: 400; }
  &__title { color: #3D4047; font-size: 16px; line-height: 1.25; }
}

@media(min-width: screen-xxs-min) {
  .pnumber {
    &__number { font-size: 55px; }
    &__title { font-size: 16px; }
  }
}

@media(min-width: screen-md-min) {
  .pnumber {
    margin: -30px;

    &__item { width: 33.33%; padding: 30px; }
    &__number { font-size: 100px; font-weight: 500; }
    &__title { font-size: 22px; line-height: 1.5; }
  }
}
