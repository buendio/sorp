.first-screen {
  position: relative; padding: 70px 0 40px;

  &__box { position: relative; display: flex; }
  &__content { position: relative; color: #fff; }
  &__title { position: relative; z-index: 1; font-size: 37px; line-height: 1.35; font-weight: 500; padding-bottom: 30px; }
  &__text { position: relative; z-index: 1; font-size: 16px; line-height: 1.5; font-weight: 300; margin-bottom: 38px; }

  &__logo-box { display: none; }
  &__btn { min-width: 100%; }

  .html_nav-scroll & { margin-top: 66px; }
}

@keyframes first-screen__logo-box_animate { 0% { opacity: 0; } 100% { opacity: 0.4; }}

@media (min-width: screen-xs-min) {
  .first-screen {
    &__btn { min-width: 230px; max-width: 230px; }
  }
}

@media (min-width: screen-md-min) {
  .first-screen {
    padding: 90px 0 60px;
    
    &_no-logo &__content { width: 66%; margin-left: 0; }
    &__logo-box {
      max-width: 250px; max-height: 250px; opacity: 0;
      -webkit-mask: url('../img/blocks/logo-min.svg'); -webkit-mask-repeat: no-repeat; -webkit-mask-position: top center;
      -webkit-mask-size: contain; object-fit: cover; background: no-repeat center / cover; display: block; }
    &__logo-box_animate { opacity: 0.4; animation-duration: 3s; animation-name: first-screen__logo-box_animate; }
    &__logo { width: 100%; height: 100%; }

    &__content { margin-left: 50px; }
    &__title { font-size: 48px; }
    &__text { font-size: 18px; }
  }
}

@media (min-width: screen-lg-min) {
  .first-screen {
    &__logo-box { flex: none; }
  }
}