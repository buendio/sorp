.block11 {
  margin: 0 -10px -20px; display: flex; flex-wrap: wrap;

  &__item { width: 100%; padding: 0 10px; padding-bottom: 20px; display: flex; flex-direction: column; }
  &__item-inner { position: relative; color: #fff; padding: 20px; overflow: hidden; display: flex; flex-direction: column; background-color: #D64356; transition: .3s; }

  &__pattern, &__pattern-hover { content: ''; position: absolute; top: 0; right: 0; width: 100%; height: 100%; object-fit: none; object-position: center; background-size: cover; background-position: center; background-repeat: no-repeat; transition: .3s; }
  &__pattern-hover { transform: translateX(-100%); background-size: auto; }

  &__item-inner:hover { background-color: #2E3139; }
  &__item-inner:hover &__pattern { transform: translateX(-100%); }
  &__item-inner:hover &__pattern-hover { transform: translateX(0); }
  &__top { position: relative; z-index: 1; display: flex; justify-content: space-between; margin-bottom: 30px; }
  &__top-title { font-size: 27px; line-height: 1.3; font-weight: 500; }
  &__icon-box { width: 50px; height: 50px; background: #fff; border-radius: 8px; display: flex; align-items: center; justify-content: center; }
  &__icon { fill: #D64356; width: 31px; height: 31px; }
  &__content { position: relative; z-index: 1; margin-top: auto; }
  &__title { font-size: 21px; line-height: 1.3; font-weight: 500; display: flex; align-items: flex-end; margin-bottom: 13px; }
  &__desc { font-size: 15px; line-height: 1.5; font-weight: 300; }

  &_width1 &__item { width: 100%; }
  &_height1 { height: 100%; }
  &_height1 &__item-inner { height: 100%; }
  &_height2 { height: 100%; }
  &_height2 &__item { height: 50%; }
  &_height2 &__item-inner { height: 100%; }

  &_size-small &__top-title { font-size: 24px; }
  &_size-small &__title { font-size: 20px; }
  &_size-small &__desc { font-size: 16px; font-weight: 300; }

  &_white &__item-inner { color: #4E535F; background-color: #fff; }
  &_white &__desc { color: #5A5C62; }
  &_white &__icon-box { border: 1px solid rgba(214, 67, 86, 0.15); }

  &_white &__item-inner:hover { color: #fff; background-color: #524DD2; }
  &_white &__item-inner:hover &__desc { color: #fff; }
}

@media (min-width: screen-md-min) {
  .block11 {
    &__item { width: 33.33%; }
    &__item-inner { padding: 29px; }
    &__top-title { font-size: 35px; }
    &__title { font-size: 24px; }
    &__desc { font-size: 17px; }

    &_size-small &__top-title, &_size-small &__title { font-size: 24px; }
  }
}

@media (min-width: screen-lg-min) {
  .block11 {
    &__top { margin-bottom: 70px; }
  }
}