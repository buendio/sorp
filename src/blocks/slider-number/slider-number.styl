.slider-number {
  background-size: contain; background-position: center; background-repeat: no-repeat;

  &__box { position: relative; }
  &__box-logo { position: relative; width: 100%; height: 280px; margin: auto; border: 17px solid #EBECEE; display: flex; align-items: center; justify-content: center; transition: .3s; /*animation: pulse 2s ease-in-out 1s infinite;*/ }
  &__box-logo:after, &__box-logo:before { content: ''; position: absolute; top: 50%; left: -17px; width: 17px; height: 60px; transform: translateY(-50%); background: #fff; }
  &__box-logo:before { right: -17px; left: auto; }
  &__box-logo_animated { transform: scale(1.07); }
  &__logo { display: none; }

  &__carousel { position: absolute; top: calc(50% - 35px); display: flex; }
  &__item { font-weight: 900; opacity: 0.35; transform: scale(0.7); display: flex; flex-wrap: wrap; align-items: center; justify-content: center; transition: .3s; }
  &__number, &__text { width: 100%; text-align: center; }
  &__number { color: #D64356; font-size: 55px; line-height: 64px; margin-right: 5px; }
  &__text { font-size: 14px; line-height: 16px; text-transform: uppercase; }

  & .center &__item { opacity: 1; transform: scale(1); }
  &__prev { margin-right: 3px; }
}

@media (min-width: screen-md-min) {
  .slider-number {
    padding: 70px 0;

    &__logo { position: absolute; top: -70px; right: -160px; width: 201px; height: 135px; display: block; }

    &__box-logo { width: 530px; height: 250px; }
    &__item { flex-wrap: nowrap; }
    &__number, &__text { width: auto; text-align: left; }
  }
}

@media (min-width: screen-xl-min) {
  .slider-number {
    padding-top: 180px;
  }
}

