.block48 { display:flex; justify-content: space-between; flex-wrap:wrap; margin-bottom: -24px; 
  &__item { margin-bottom: 24px; width: 100%; padding: 30px 40px 30px 30px; 
    //-&:hover { background: #4943CD; box-shadow: 25px 40px 50px rgba(0, 0, 0, 0.07); 
    //-  .block48__title{ color: #FFF; }
    //-  .block48__text { color: #CFD9EC; }
    //-  .block48__icon { background: #3631AC; } }
  }
  &__icon { width: 65px; height: 65px; margin-bottom: 30px; background: #4943CD; border-radius: 10px; display:flex; align-items:center; justify-content: center; }
  &__title { font-weight: 500; font-size: 22px; line-height: 27px; color: #000000; margin-bottom: 30px; }
  &__text { font-weight: 300; font-size: 16px; line-height: 25px; color: #9598A2; }
  
}
@media(min-width: screen-sm-min) {
  .block48 { 
    &__item { width: calc(33.33% - 15px); }
  }
}
@media (max-width: 991px) { .block48__item { width: calc(50% - 20px); } }
@media (max-width: 576px) { .block48__item { width: 100%; } }