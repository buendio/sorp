.statistics { display: flex; flex-wrap: wrap;
  &__item { width: 100%; padding: 25px 0; }

  &__description { font-size: 18px; font-weight: 300; line-height: 27px; color: #000; }  
  &__title { font-weight: 400; font-size: 48px; line-height: 86px;
    &_gradient {
      background-image: linear-gradient(180deg, #DDD8D8 0%, rgba(221, 216, 216, 0.5) 100%);
      -webkit-background-clip: text; -webkit-text-fill-color: transparent; } }
}

@media (min-width: screen-md-min) {
  .statistics { margin-left: -60px;
    &__item { width: 50%; padding: 50px 0 50px 60px;
      &_border { border-bottom: 0; border-right: 1px solid#E3E3E3; }
    }  
    &__title { font-size: 54px; line-height: 96px; } 
  } }

@media (min-width: screen-sm-min) { .statistics__title { font-size: 64px; line-height: 96px; } }