.block57 { display: flex; justify-content: space-between; flex-wrap: wrap; margin-bottom: -20px;
  &__item { display: flex; flex-direction: column; padding: 40px; width: 100%; background-color: #fff; margin-bottom: 20px; border-bottom: 5px solid #D64356; transition: .3s ease-in-out; background-image: url('/dist/img/blocks/block57/red-wave-small.png'); background-repeat: no-repeat; background-position-x: right; background-size: cover;    
    &:hover { box-shadow: 10px 10px 50px rgba(0, 0, 0, 0.1); transform: scale(1.02); } }
  &__icon { width: 32px; height: 32px;
    &-wrap { align-self: flex-end; display: flex; justify-content: center; align-items: center; background-color: #D64356; border-radius: 15%; width: 50px; height: 50px; margin-bottom: 70px; } }
  &__title { font-size: 20px; font-weight: 400; line-height: 28px; color: #000; }
}

@media (min-width: screen-sm-min) {
  .block57 { 
    &__item { width: calc(33.33% - 15px); }
  }
}