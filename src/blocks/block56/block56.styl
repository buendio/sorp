gradientBlue = linear-gradient(91deg, #4842cb 20%, rgba(72,66,203,0.5) 80%);
.block56 { display: flex; justify-content: space-between; flex-wrap: wrap; margin-bottom: -22px;
  &__item { width: 100%; background-repeat: no-repeat; background-position: right; margin-bottom: 22px; min-height: 350px; cursor: pointer; }
  &__content  { padding: 40px; display: flex; flex-direction: column; justify-content: space-between; width: 100%; height: 100%; background: gradientBlue; }
  &__head { color: rgba(256, 256, 256, .7); display: flex; justify-content: space-between; align-items: center; font-size: 15px; font-weight: 500; line-height: 21px; }  
  &__title { color: #fff; font-size: 23px; font-weight: 500; line-height: 28px; }
  &__description { color: #fff; font-size: 16px; font-weight: 400; line-height: 23px; }
    
  &__item_width2 {
    .block56__item { background-size: cover; }
    .block56__title { font-size: 30px; font-weight: 500; line-height: 36px; } }
}

@media(min-width: screen-sm-min) { 
  .block56__item { width: calc(50% - 10px); }
}

@media(min-width: screen-md-min) {  
  .block56 {
    &__item { width: calc(33.33% - 14px); }
    &__item_width2 { width: calc(66.66% - 8px); }    
  }  
}