.block56 {
  &_modal { background-repeat: no-repeat; background-size: cover; background-position-x: right; }  
  &__modal-content { padding: 50px 25px; background: linear-gradient(90deg, #4842cb 28%, rgba(72,66,203,0.5) 100%); }
  &__modal-text-container { width: 100%; color: #FFF; }
  &__modal-title { font-size: 30px; font-weight: 500; line-height: 36px; }
  &__modal-description { font-size: 16px; font-weight: 300; line-height: 26px; }
}

@media (min-width: screen-sm-min) {
  .block56 { 
    &__modal-title { font-size: 34px; line-height: 42px; }
    &__modal-description { font-size: 18px; line-height: 28px; } }
}

@media (min-width: screen-xs-min) {
  .block56 {
    &__modal-content { padding: 45px; background: linear-gradient(90deg, #4842cb 68%, rgba(72,66,203,0.1) 100%); }
    &__modal-text-container { width: 70%; } }
}