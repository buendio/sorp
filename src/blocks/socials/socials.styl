.socials {
  &__item { cursor: pointer; margin-right: 45px; }
  &__icon { fill: #d8d9dd; width: 28px; height: 28px; transition: .3s; }
  &_big-icons &__icon { width: 34px; height: 34px; }
  &__item:hover &__icon { fill: #524DD2; }
  &__item:last-child { margin-right: 0; }
}

@media(min-width: screen-xs-min) {
  .socials {
    &__item { margin-right: 45px; }
  }
}