.block21 {
  overflow: hidden; display: flex; flex-wrap: wrap;

  &__item { position: relative; width: 100%; margin: 10px; padding: 5px 0; transition: .3s; }
  &__title { font-size: 23px; line-height: 1.3; font-weight: 700; color: #2B2F3B; margin-bottom: 10px; }
  &__text { color: #8A919C; font-size: 16px; line-height: 1.44; font-weight: 300; margin-bottom: 20px; }
  &__title, &__text { position: relative; z-index: 2; }
  &__icon-svg { margin-left: 0; }
  &__icon { position: absolute; top: 20px; right: 10px; z-index: 1; width: 125px; height: 125px; background-size: contain; background-repeat: no-repeat; background-position: right; transition: .3s; }
  &__btn { width: 35px; padding: 5px; }
}

@media (min-width: screen-xs-min) {
  .block21 {
    &__item { width: calc(50% - 20px); padding-left: 5px; padding-right: 5px; }
  }
}

@media (min-width: screen-sm-min) {
  .block21 {
    &__item { width: calc(33.33% - 20px); padding: 50px 20px 30px; }
  }
}

@media (min-width: screen-md-min) {
  .block21 {
    margin: -50px -30px -30px; overflow: visible;
    &__item:hover:after { content: ''; position: absolute; top: 0; left: 0; opacity: 0; width: 100%; height: 100%; transform: scale(1.15); background: #fff; box-shadow: 0 30px 70px rgba(0, 0, 0, 0.1); transition: .3s; }

    &__btn { opacity: 0; }
    &__item:hover { z-index: 10; }
    &__item:hover:after { opacity: 1; }
    &__item:hover &__btn { z-index: 1; opacity: 1; }
    &__icon { right: -20px; }
  }
}

@media (min-width: screen-lg-min) {
  .block21 {
    &__title { font-size: 27px; }
    &__text { font-size: 18px; }
    &__icon { width: 163px; height: 163px; }
  }
}