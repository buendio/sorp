.block-snake {
  position: relative; z-index: 2; margin: 0 -15px; display: flex; flex-wrap: wrap;

  &_border-top-none:before { border-top: 0; }
  &__item { width: 100%; margin: 25px 15px; display: flex; align-items: flex-start; }
  &__item_bg-white { background: #fff; }
  &__text { font-size: 16px; line-height: 24px; }
  &__text_gray { color: #6E7990; }
  &__digit { width: 80px; font-size: 32px; text-align: center; }
  &__text-header { color: #292F3D; font-size: 20px; font-weight: 500; margin-bottom: 10px;}
  &__icon-wrap { width: 60px; min-width: 60px; height: 60px; min-height: 60px; margin-right: 30px; border-radius: 50%; background-color: #d64356; display: flex; align-items: center; justify-content: center; }
  &__icon-box { color: #ffffff; width: 65px; height: 65px; margin-right: 20px; font-size: 24px; line-height: 24px; font-weight: 400; background-color: #d64356; border-radius: 50%; display: flex; flex: none; align-items: center; justify-content: center; }
  &__icon { width: 32px; height: 32px; background-size: contain; background-position: center; background-repeat: no-repeat; }

  &:first-child { margin-top: -25px; }
}

@media (min-width: screen-sm-min) {
  .block-snake {
    &__icon-wrap { width: 85px; height: 85px; margin-bottom: 35px; }
    &__icon-box { width: 85px; height: 85px; margin: 0 0 35px; }
    &__icon { width: 45px; height: 45px; }
    &_line-right:before { content: ''; position: absolute; top: 88px; left: 57px; width: calc(100% - 50px); height: calc(100% + 1px); border-top-right-radius: 50px; border-bottom-right-radius: 50px; border: 1px solid #d64356; border-left: 0; }
    &_line-left:before { content: ''; position: absolute; top: 88px; right: 57px; width: calc(100% - 50px); height: calc(100% + 2px); border-top-left-radius: 50px; border-bottom-left-radius: 50px; border: 1px solid #d64356; border-right: 0; }
    &__item { position: relative; z-index: 2; width: calc(33.333% - 30px); margin: 50px 15px 0; display: block; }
  }
}