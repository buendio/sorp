.block58 { margin-bottom: -20px; 
  &__row { display: flex; flex-wrap: wrap; justify-content: space-between; margin-bottom: 20px; 
      &_reverse { flex-direction: column-reverse; } }
  &__item { display: flex;  width: 100%;  padding: 30px; min-height: 240px; background-color: #fff; background-repeat: no-repeat;
    &_image { border-radius: 7px 7px 0 0; background-size: cover; }
    &_order { -webkit-order: 3; -ms-flex-order: 3; order: 3; }
  }
  &__title { color: #000; font-size: 22px; font-weight: 500; line-height: 27px; margin-bottom: 20px; }
  &__description { color: #9598A2; font-size: 16px; font-weight: 300; line-height: 24px; }
  &__icon { width: 35px; height: 35px;
    &-wrap { display: flex; justify-content: center; align-items: center; margin-right: 25px; flex-shrink: 0; background-color: #4943CD; border-radius: 15%; width: 65px; height: 65px; } }
}

@media (min-width: screen-sm-min) {
  .block58 {
    &__row_reverse { flex-direction: row; } 
    &__item { width: calc(50% - 15px); 
      &_image { border-radius: 7px; } }
  }
}