.block12 {
  display: flex; flex-wrap: wrap; justify-content: space-between;

  &_borderline { margin: 0 -15px -25px; }
  &__item { width: 100%; padding: 25px 18px; border: 1px solid #E3E3E3; transition: .5s; }
  &__item:nth-child(3n+2) { border-left: none; border-right: none; }
  &_modal .block12__item:hover  { color: #fff; border-color: #CD4051; background: url('../img/blocks/pattern-hover-modal.png') #CD4051 125%/contain no-repeat; }
  &__item:hover .block12__icon { border: 1px solid #FFF; }
  &__icon { width: 52px; height: 52px; padding: 8px; margin-bottom: 25px; border-radius: 10px; background: #CD4051; border: 1px solid #CD4051; display: flex;  align-items: center;  justify-content: center;  transition: .3s; }
  &__content { font-size: 18px; line-height: 24px; }
  &__title { font-size: 18px; line-height: 26px; font-weight: 500; }
  &__text { font-size: 16px; line-height: 1.3; font-weight: 300; margin-top: 10px; }

  /* пустой block5-item */
  &__item_no-hover { display: none; }
}

@media (min-width: screen-sm-min) {
  .block12 {
    &_borderline { margin: 0 -46px -36px; }
    &__item { width: 33.33%; padding: 40px; }
    &__title { font-size: 22px; }
    &__text { font-size: 18px; }

    /* пустой block5-item */
    &__item_no-hover:hover { background: none !important; border-color: #E3E3E3 !important; }
  }
}





