.block5 {
  padding: 30px 15px; border-radius: 7px; border: 1px solid #262C3A; display: flex; flex-wrap: wrap;

  &__text { color: #818A9F; font-size: 16px; line-height: 1.67; font-weight: 400; }
  &__text p { margin-bottom: 15px; }
  &__text p:last-child { margin-bottom: 0; }
  &__icon { width: 80px; height: 80px; margin: 0 auto 20px; flex: none; }
}



@media (min-width: screen-sm-min) {
  .block5 {
    padding: 45px; flex-wrap: nowrap;

    &__icon { margin: 0 45px 0 0; }
    &__text { font-size: 18px; }
  }
}