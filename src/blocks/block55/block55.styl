.block55 { display: flex; flex-wrap: wrap; justify-content: space-between; margin-bottom: -22px; 
    
    &__background { width: 340px; height 350px; opacity: 0; transition: .3s; position: absolute; right: 0; top: 0; background-size: contain; background-repeat: no-repeat; }    
    &__item { background-color: #fff; padding: 36px; margin-bottom: 22px; width: 100%; background-repeat: no-repeat; transition: .3s all ease-in-out; position: relative;        
        &:hover { box-shadow: 10px 10px 50px rgba(64, 144, 226, 0.1); transform: scale(1.018); 
         .block55__background { opacity: 1; } 
        }
    }
    &__head { display: flex; justify-content: space-between; margin-bottom: 50px;
        &-text { font-size: 14px; font-weight: 500; line-height: 19px; color: #8a919c; text-transform: uppercase; } }

    &__title { font-size: 21px; font-weight: 500; line-height: 28px; margin-bottom: 15px; color: #000; }
    &__description { font-size: 15px; line-height: 21px; color: #414141; font-weight: 300; }
    &__icon-wrap { margin-right: 20px; width: 70px; height: 70px; min-width: 70px; border-radius: 50%; display: flex; align-items: center; justify-content: center;  background: linear-gradient(180deg, rgba(0, 0, 0, 0.05) 0%, rgba(21, 21, 21, 0.01) 100%); }
    &__icon { width: 32px; height: 33px; }
}

@media (min-width: screen-md-min) {
    .block55 {
        &_width3 &__item { width: calc(33.33% - 15px); }
    }
}

@media (min-width: screen-sm-min) {
    .block55 {
        &__icon-wrap { margin-right: 0; }
        &__item { width: calc(50% - 12px); }
    }
}