.block24 {
  margin: -10px; display: flex; flex-wrap: wrap;

  &__item { width: 100%; margin: 10px; padding: 25px; background: #fff; border-bottom: 5px solid #D64356; display: flex; }
  &__img { display: none; background-repeat: no-repeat; }
  &__title { font-size: 22px; line-height: 1.36; font-weight: 500; margin-bottom: 12px; }
  &__text { color: #474B54; font-size: 16px; line-height: 1.5; font-weight: 300; }

}

@media(min-width: screen-xxs-min) {
  .block24 {
    &_big {
      .block24__item { padding: 25px 21px; }
      .block24__img { width: 45px; height: 45px; } }

    &__img { width: 32px; height: 32px; margin-right: 30px; flex: none; display: block; }
  }
}

@media(min-width: screen-md-min) {
  .block24 {
    &_width2 &__item { width: calc(50% - 20px); }
  }
}