.block42 { display: flex; justify-content: space-between; flex-wrap: wrap; margin-bottom: -20px;
  &__item { width: 100%; background-color: white; position: relative; z-index: 3; margin-bottom: 20px; display: flex; flex-direction: column; padding: 30px 24px; }
  &__icon { width: 32px; height: 32px; color:#000;
    &-wrap { display: flex; align-items: center; justify-content: center; width: 65px; height: 65px; flex-shrink: 0;  background-color: #4943CD; border-radius: 20%; margin-bottom: 20px; }
  }
  &__title { font-size: 22px; font-weight: 500; line-height: 27px; margin: 8px 0 24px; }
  &__description { font-size: 16px; font-weight: 300; line-height: 24px; color: #9598A2; }  
}

@media (min-width: screen-sm-min) { .block42__item { flex-direction: row; } }
@media (min-width: screen-xs-min) { .block42__item { width: calc(50% - 10px); } .block42__icon-wrap { margin-right: 24px; margin-bottom: 0; } }