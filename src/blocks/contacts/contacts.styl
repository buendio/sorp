.contacts {
  &__item { padding: 30px 0; border-bottom: 1px solid #E3E3E3; display: flex; flex-wrap: wrap; }
  &__item:last-child { border-bottom: 0; }
  &__title { color: #252B39; width: 100%; margin-bottom: 15px; font-size: 18px; line-height: 1.5; font-weight: 500; }
  &__info { width: 100%; display: flex; justify-content: space-between; }
  &__phone { color: #000; font-size: 24px; line-height: 1; display: block; }
  &__phone-span { color: #b7c0ca; }
  &__signature { color: #B7C0CA; margin-top: 12px; font-size: 16px; line-height: 1; font-weight: 500; }
  &__address { font-size: 16px; line-height: 30px; font-style: normal; }
  &__address p { margin-bottom: 15px; }
  &__address p:last-child { margin-bottom: 0; }
  &__icon { display: none; }
  &__btn { color: #474B54; width: 160px; margin: 0 10px 15px 0; padding: 7px 15px; font-size: 16px; line-height: 1.5; border-radius: 50px; background: #fff; display: inline-flex; align-items: center; }
  &__btn_email { color: #4A45C5; }
  &__btn-icon { width: 21px; height: 21px; margin-right: 15px; background-size: cover; flex: none; }
}

@media(min-width: screen-xxs-min) {
  .contacts {
    &__btn { width: calc(50% - 15px); }
  }
}

@media(min-width: screen-xs-min) {
  .contacts {
    &__btn { width: auto; font-size: 18px; padding-left: 23px; padding-right: 23px; }
  }
}

@media(min-width: screen-md-min) {
  .contacts {
    &__item { padding: 58px 0; }
    &__title { width: 270px; margin: 0; }
    &__info { width: calc(100% - 270px); }
    &__phone { font-size: 46px; }
    &__signature { font-size: 18px; }
    &__address { font-size: 18px; }
    &__address p { margin-bottom: 0; }
  }
}

@media(min-width: screen-lg-min) {
  .contacts {
    &__icon { width: 60px; height: 60px; background-size: contain; display: block; }
    &__btn { margin: 0 20px 0 0; }
  }
}