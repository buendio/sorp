.block-schedule { display: flex; flex-wrap: wrap; justify-content: space-between; margin-bottom: -20px;
  &__item { width: 100%; font-size: 18px; font-weight: 400; line-height: 22px; display: flex; align-items: center; margin-bottom: 20px; }
  &__title { margin-left: 20px; }
  &__duration { width: 50%; padding: 8px 16px; color: #fff; background-color: #D64356; border-radius: 50px; text-align: center; font-size: 16px; font-weight: 500; position: relative;     
    .block-schedule &&_lightblue { background-color: #0066FF; }
    .block-schedule &&_break { background-color: #7D879C; } } 
  &_blue { 
    .block-schedule__duration { background-color: #4943CD; }
    &.block-schedule::before { border: 1px dashed #4943CD; } }
}

@media (min-width: screen-md-min) {
  .block-schedule { position: relative;
    &__duration { width: 100%; padding: 8px 25px; }
    &__title { margin-top: 20px; margin-left: 0; }
    &::before { content: ""; width: 99%; position: absolute; top: 20%; border: 1px dashed #D64356; } 
    &__item { width: auto; justify-content: space-between; flex-direction: column; } 
    &_width4 &__duration { width: 174px; } } }