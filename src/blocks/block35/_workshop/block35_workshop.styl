.block35_workshop { flex-wrap: wrap;
  .block35 {
    &__item { padding: 26px 0 0; 
      & > *:not(.block35__divider) { padding-left: 25px; padding-right: 25px; } }
    &__head { padding-bottom: 24px; }
    &__icon-wrap { margin-left: 7px; }
    &__main { min-height: 310px; padding: 30px 0; background-image: url('../img/blocks/red-wave-rtl.png'); background-repeat: no-repeat; background-size: cover; 
      &_wave-ltr { background-image: url('../img/blocks/red-wave.png'); background-position-x: right; } }
    &__content { height: 100%; }
    &__title { font-size: 22px; line-height: 28px; }
    &__description{
      &_workshop { display: flex; }
      &-duration { color: #7D879C; font-size: 15px; font-weight: 400; line-height: 24px; }
      &-image { width: 32px; height: 22px; margin-right: 10px; } }  
  }

  &.block35_head-only .block35__item { display: flex; flex-direction: column; justify-content: space-between; padding: 26px 0;
    background-image: url('../img/blocks/red-wave-rtl.png'); background-repeat: no-repeat; background-position: left; background-size: cover;
  }
}