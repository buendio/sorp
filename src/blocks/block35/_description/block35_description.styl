.block35_description {
  .block35__item { background-image: url("../../img/blocks/block35/wave-blue.svg"); background-repeat: no-repeat; background-position-x: right; background-position-y: top; }    
  .block35__head { padding-bottom: 20px; }
  .block35__sub-title { font-size: 17px; font-weight: 500; line-height: 36px; color: #A2ABBE; margin-bottom: 30px; }
}

.block35_modal.block35_description .block35__item:hover { 
    background: #4943CD url("../../img/blocks/pattern-hover-modal.png") no-repeat center; 
    .block35__title { color: #fff; }
    .block35__content { color: #fff; }
    .block35__icon-wrap { border: 1px solid #FFF; }
}  