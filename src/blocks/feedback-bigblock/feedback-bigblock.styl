.feedback-bigblock {
  &__info-box { height: 100%; }
  &__info-title { font-size: 25px; line-height: 1.25; font-weight: 700; margin-bottom: 25px; }
  &__info-text { font-size: 16px; line-height: 1.5; font-weight: 300; }
  &__info-text-item { margin-bottom: 15px; }
  &__info-text-item:last-child { margin-bottom: 0; }

  &__form { height: 100%; padding: 45px 35px; background: #fff; }
  &__form_bg-transparent { background: transparent; }
  &__form-title { font-size: 27px; line-height: 1.15; font-weight: 700; margin-bottom: 33px; }

  &_no-bg &__form { padding: 40px 0 0; background: transparent; }
  &_no-bg &__info-box { background: transparent; }
}

@media (min-width: screen-sm-min) {
  .feedback-bigblock {
    &_no-bg &__form { padding-left: 30px; }
  }
}

@media (min-width: screen-md-min) {
  .feedback-bigblock {
    &__info-title { font-size: 32px; }
    &__form-title { font-size: 32px; }
    &_no-bg &__form { padding: 0 35px 0 80px; }
  }
}

@media (min-width: screen-xl-min) {
  .feedback-bigblock {
    &_no-bg &__form { display: flex; flex-direction: column; justify-content: space-between; }
  }
}