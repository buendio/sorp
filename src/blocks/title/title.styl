.title {
  color: #D64356; font-size: 22px; line-height: 30px; font-weight: 700;
  
  &_font-w300 { font-weight: 300; }
  &_font-w400 { font-weight: 400; }
  &_font-w500 { font-weight: 500; }
  &_font-s38 { font-size: 27px; line-height: 1.5; }

  &_color-gray { color: #abb1bf; }
  &_color-dark { color: #252B39; }
  &_color-black { color: #000; }
  &__color-dark { color: #2b2f3b; }
}

@media(min-width: screen-xxxs-min) {
  .title {
    font-size: 30px; line-height: 38px;
  }
}

@media(min-width: screen-sm-min) {
  .title {
    font-size: 48px; line-height: 58px;
    &_font-s26 { font-size: 26px; line-height: 1.6; }
    &_font-s36 { font-size: 36px; line-height: 42px; }
    &_font-s32 { font-size: 32px; line-height: 43px; }
    &_font-s38 { font-size: 38px; line-height: 1.5; }
  }
}