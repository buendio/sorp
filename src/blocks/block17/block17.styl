bg17Url = url('data:image/png;base64,');

.block17 { display: flex; flex-wrap: wrap; justify-content: space-between; margin-bottom: -22px;
    &__item {
        width: 100%; background-color: #fff; transition: .3s all ease-in-out; border-bottom: 4px solid #fff; cursor: pointer; margin-bottom: 22px;
        &:hover { box-shadow: 10px 10px 50px rgba(0, 0, 0, 0.1); transform: scale(1.02); border-bottom-color: #CD4051; }
    }

    &__video { width: 100%; min-height: 240px; position: relative;
        &::after { width: 60px; height: 60px; background: rgba(0, 0, 0, 0.5) bg17Url no-repeat center; border-radius: 50%; content: '';
            position: absolute; top: 50%; left: 50%;
            transform: translate(-50%, -50%); } }
    &__image { width: 100%; min-height: 240px; }            
    &__duration { font-size: 17px; font-weight: 500; line-height: 20px; padding: 20px; position: absolute; bottom: 0; right 0; color: rgba(256, 256, 256, 0.8); }
    &__thumbnail { width: 100%; -webkit-user-drag: none; -khtml-user-drag: none; -moz-user-drag: none; -o-user-drag: none; user-drag: none; }
    &__info { padding: 25px; }
    &__title { font-size: 24px; font-weight: 500; line-height: 32px; margin-bottom: 15px; color: #000; }
    &__description { font-size: 16px; font-weight: 300; line-height: 23px; color: #7D879C; } }

@media (min-width: screen-md-min) {
    .block17 {
        &__item { width: calc(33.33% - 15px); }
    }
}

@media (min-width: screen-sm-min) {
    .block17 {
        &__item { width: calc(50% - 12px); }
    }
}