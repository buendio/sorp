.form-block {
  &__item_search { display: flex; margin-bottom: 0; }

  &__input_search { color: #000; font-size: 16px; font-weight: 400; line-height: 22px; border-bottom-color: #C4C4C4; 
    &:focus { border-bottom-color: darken(#c4c4c4, 20%); }  
  }

  &__search-btn {
    margin-left: 20px; min-width: 70px; width: 70px; height: 40px; transition: .3s ease-out; border-radius: 5px; cursor: pointer;
    background: #D64356 url('data:image/png;base64,') no-repeat center;

    &:hover { background-color: darken(#D64356, 5%); }
    &:active { background-color: darken(#D64356, 10%); box-shadow 0 0 8px 1px rgba(214,67,86, 0.5); }
  }
}