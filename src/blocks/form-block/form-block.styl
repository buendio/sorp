.form-block {
  &__item { margin-bottom: 30px; }
  &__item:last-child { margin-bottom: 0; }
  &__label { color: #333333; font-size: 18px; line-height: 20px; }
  &__input { width: 100%; height: 40px; background: transparent; border: 0; border-bottom: 1px solid #7D879C; transition: .3s; }
  &__input:focus { border-bottom: 1px solid #000; }

  &__confid { color: #BABABA; margin-top: 20px; font-size: 12px; line-height: 1.6; }
}