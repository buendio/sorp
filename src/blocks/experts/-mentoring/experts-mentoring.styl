.experts-mentoring { display: flex; justify-content: space-between; flex-wrap: wrap; margin-bottom: -20px;
  &__item { display: flex; flex-direction: column; align-items: flex-start; justify-content: center; width: 100%; margin-bottom: 20px; padding: 40px; border-bottom: 4px solid #3C38B8; 
    background-color: #fafafa; user-select: none; user-drag: none; -webkit-user-drag: none; }
  &__icon { flex-shrink: 0; width: 60px; height: 60px; margin-bottom: 20px; }
  &__name { font-size: 27px; font-weight: 500; line-height: 36px; }
  &__description { font-size: 15px; font-weight: 300; line-height: 21px; margin: 20px 0; }
  &__btn { display: inline-block; background-color: #4D62D2; border-radius: 5%; padding: 10px 20px; color: #fff; font-weight: bold; }
}

@media (min-width: screen-sm-min) {
  .experts-mentoring {
      &__item { flex-direction: row; width: calc(50% - 10px); }
      &__icon { width: 90px; height: 90px; margin-bottom:0; margin-right: 32px; }
  }
}