.bg {
  position: relative;

  &_first-screen { background: #524dd2; }
  &_ff { background: #fff; }
  &_f9 { background: #F9F9F9; }
  &_fa { background: #fafafa; }
  &_red { background: #d64356; }
  &_gray-linear { background: linear-gradient(180deg, #F9F9F9 0%, rgba(255, 255, 255, 0) 100%); }
  &_z-index { z-index: 5; }

  &_modal { position: fixed; top: 0; left: 0; z-index: 100; opacity: 0; width: 100%; height: 100%; background: #000; visibility: hidden; display: none; transition: 250ms linear; }
  &_modal-block { display: block; }
  &_modal-active { visibility: visible; opacity: 0.7; }
  &_triangle-active { background: url('../img/blocks/bg/bg-triangle.svg') top center/contain no-repeat; }
}

@media(min-width: screen-md-min) {
  .bg {
    &_triangle { background-size: auto; }
    &_clip-path { position: relative; clip-path: polygon(0 0, 100% 0, 100% 75%, 45% 100%, 0% 100%); -webkit-clip-path: polygon(0 0, 100% 0, 100% 75%, 45% 100%, 0% 100%); }
  }
}