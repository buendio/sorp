.pages { display: flex; margin-right: -10px;
    &__content-item {
        display: none;
        &.pages_current {
            display: block;
        }
    }

    &__button {
        cursor: pointer;
        transition: .3s all ease;
        width: 30px;
        height: 30px;
        text-align: center;
        border-radius: 5px;
        margin-right: 10px;
        background-color: #E7E7E7; 
        color: #9DA7BA;
        padding: 5px;        
        font-size: 16px;
        font-weight: 700;
        line-height: 22px;    
        
        &.pages_current { color: #fff; background-color: #D64356; }        
    }
}