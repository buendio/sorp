.line {
  position: fixed; top: 0; right: 0; left: 0; width: calc(100% - 30px); max-width: 1330px; height: 100%; margin: 0 auto; opacity: .1; pointer-events: none; display: block;

  &__item { position: absolute; top: 0; left: 15%; width: 1px; height: 100%; background: #a9a9a9; display: block; }
  &__item:nth-child(2) { left: 50%; }
  &__item:nth-child(3) { right: 15%; left: auto; }
}