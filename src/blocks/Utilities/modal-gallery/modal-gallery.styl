.modal-gallery { display: flex; flex-wrap: wrap; justify-content: space-between; align-items: center; margin: 20px 20px -20px;
  &__item { width: calc(33.33% - 12px); margin-bottom: 20px; border-radius: 5%; } }

@media(min-width: screen-xs-min) {
  .modal-gallery { margin: 30px 40px; }
  .modal-gallery__item { width: calc(16.6% - 10px); margin-bottom: 0; } }